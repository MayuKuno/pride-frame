{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext", 
    "lib": ["esnext", "dom"], 
    "moduleResolution": "node",
    "jsx": "preserve",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": true
  }
}
